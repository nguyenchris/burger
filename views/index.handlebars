{{#if hasBurgers}}
<div class="col-12">
    {{#each burgers}}
    <ul class="list-group">
        {{#if devoured}}
        <li class="list-group-item devoured">{{burger_name}}
        </li>
        {{else}}
        <li class="list-group-item devour">{{burger_name}} <button data-id="{{id}}"
                class="devour-btn btn btn-success">Devour it!</button></li>
        {{/if}}
        {{/each}}

        {{else}}
        <li class="list-group-item">No Burgers Found</li>
        {{/if}}
    </ul>
</div>




